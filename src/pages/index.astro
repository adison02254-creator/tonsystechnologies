---
// Astro Component Section
---

<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TONSYS | Ultimate Project Hub & Contact</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300;400;600;800&display=swap" rel="stylesheet">
    
    <style>
        /* =========================================
           [1] SETUP & ANIMATED BACKGROUND
           ========================================= */
        :root {
            --primary-gold: #ffeb3b;
            --accent-blue: #00d2ff;
            --bg-gradient: linear-gradient(-45deg, #1a2a6c, #b21f1f, #fdbb2d, #22c1c3);
            --glass: rgba(255, 255, 255, 0.07);
            --glass-border: rgba(255, 255, 255, 0.1);
        }

        * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Kanit', sans-serif; cursor: none; }
        
        body {
            background: var(--bg-gradient);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            color: #fff;
            min-height: 100vh;
            overflow-x: hidden;
        }

        @keyframes gradientBG { 0% { background-position: 0% 50%; } 50% { background-position: 100% 50%; } 100% { background-position: 0% 50%; } }

        /* ตัวเมาส์วงกลม */
        #cursor { position: fixed; width: 20px; height: 20px; background: rgba(255, 235, 59, 0.5); border-radius: 50%; pointer-events: none; z-index: 9999; transition: transform 0.1s ease; }
        
        /* พื้นหลัง Particles */
        #particles-js { position: fixed; width: 100%; height: 100%; top: 0; left: 0; z-index: 0; }
        
        /* ลูกบอลแสงฟุ้งๆ */
        .orb { position: fixed; border-radius: 50%; filter: blur(80px); z-index: -1; opacity: 0.4; animation: float 20s infinite alternate; }
        .orb-1 { width: 400px; height: 400px; background: #764ba2; top: -10%; left: -10%; }
        .orb-2 { width: 300px; height: 300px; background: #ff512f; bottom: 10%; right: 5%; }

        @keyframes float { from { transform: translate(0,0); } to { transform: translate(100px, 50px); } }

        /* =========================================
           [2] UI ELEMENTS (NAV & HERO)
           ========================================= */
        nav {
            display: flex; justify-content: space-between; align-items: center;
            padding: 20px 10%; background: var(--glass); backdrop-filter: blur(15px);
            border-bottom: 1px solid var(--glass-border); position: sticky; top: 0; z-index: 1000;
        }

        .logo { font-size: 1.8rem; font-weight: 800; color: var(--primary-gold); }

        .hero {
            height: 60vh; display: flex; flex-direction: column; justify-content: center;
            align-items: center; text-align: center; z-index: 1; padding: 0 20px;
        }

        .hero h1 { font-size: clamp(2.5rem, 8vw, 5rem); font-weight: 800; }
        .btn-glow {
            padding: 15px 40px; border-radius: 50px; background: var(--primary-gold);
            color: #000; text-decoration: none; font-weight: 700; transition: 0.3s;
            box-shadow: 0 0 20px rgba(255,235,59,0.4);
        }
        .btn-glow:hover { transform: scale(1.1); box-shadow: 0 0 40px rgba(255,235,59,0.7); }

        /* =========================================
           [3] PROJECT ARCHIVE (SEARCH & ACCORDION)
           ========================================= */
        .archive-section { padding: 60px 10%; z-index: 1; position: relative; }
        
        .search-input {
            width: 100%; max-width: 600px; display: block; margin: 0 auto 40px;
            padding: 15px 25px; border-radius: 50px; background: var(--glass);
            border: 1px solid var(--glass-border); color: white; outline: none;
        }

        .project-item {
            background: var(--glass); border-radius: 15px; margin-bottom: 10px;
            border: 1px solid var(--glass-border); overflow: hidden; transition: 0.3s;
        }
        .project-header { padding: 20px 25px; display: flex; justify-content: space-between; align-items: center; cursor: pointer; }
        .project-header h3 { color: var(--primary-gold); }
        .project-content { max-height: 0; overflow: hidden; transition: 0.5s ease; background: rgba(0,0,0,0.2); }
        .content-inner { padding: 25px; display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; }

        /* =========================================
           [4] CONTACT SECTION (ส่วนติดต่อที่เพิ่มใหม่)
           ========================================= */
        .contact-section {
            padding: 100px 10%; text-align: center; z-index: 1; position: relative;
        }
        .contact-card {
            background: var(--glass); backdrop-filter: blur(20px);
            padding: 60px 40px; border-radius: 40px; border: 1px solid var(--glass-border);
            max-width: 800px; margin: 0 auto;
        }
        .social-links { display: flex; justify-content: center; gap: 20px; margin-top: 30px; flex-wrap: wrap; }
        .social-item {
            padding: 15px 30px; border-radius: 50px; background: rgba(255,255,255,0.1);
            color: white; text-decoration: none; border: 1px solid var(--glass-border);
            transition: 0.3s; font-weight: 600;
        }
        .social-item:hover {
            background: var(--accent-blue); border-color: var(--accent-blue);
            transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,210,255,0.3);
        }

        footer { padding: 40px; text-align: center; opacity: 0.5; font-size: 0.8rem; }

        @media (max-width: 768px) { #cursor { display: none; } * { cursor: auto; } }
    </style>
</head>
<body>

    <div id="cursor"></div>
    <div id="particles-js"></div>
    <div class="orb orb-1"></div>
    <div class="orb orb-2"></div>

    <nav>
        <div class="logo">TONSYS</div>
        <div style="font-size: 0.9rem; color: var(--primary-gold);">Innovative Archive</div>
    </nav>

    <section class="hero">
        <h1>PROJECT <span style="color:var(--primary-gold)">HUB</span></h1>
        <p style="margin-top:10px;">รวบรวมทุกแนวคิดและผลงานโดย <span class="typed-text"></span></p>
        <div style="margin-top: 30px;">
            <a href="#contact" class="btn-glow nav-link">คุยกับผมเลย!</a>
        </div>
    </section>

    <section class="archive-section">
        <input type="text" id="searchInput" class="search-input nav-link" placeholder="ค้นหาโปรเจกต์ของคุณ...">
        
        <div id="projectList">
            <div class="project-item" data-name="Tonsys Dashboard">
                <div class="project-header nav-link">
                    <h3>01. Tonsys Dashboard</h3>
                    <span>+</span>
                </div>
                <div class="project-content">
                    <div class="content-inner">
                        <div class="detail-box">
                            <h4>แนวคิด</h4>
                            <p>ศูนย์กลางข้อมูลสไตล์ Glassmorphism</p>
                        </div>
                        <div class="detail-box">
                            <h4>ทำเพื่ออะไร</h4>
                            <p>จัดระเบียบงานให้สวยงาม</p>
                        </div>
                        <div class="detail-box">
                            <h4>วิธีใช้</h4>
                            <p>คลิกสำรวจผ่านเมนู</p>
                        </div>
                    </div>
                </div>
            </div>
            </div>
    </section>

    <section class="contact-section" id="contact">
        <div class="contact-card">
            <h2 style="font-size: 2.5rem; margin-bottom: 10px;">GET IN TOUCH</h2>
            <p style="opacity: 0.8;">สนใจร่วมงานหรือสอบถามรายละเอียดโปรเจกต์ ติดต่อได้เลยครับ</p>
            
            <div class="social-links">
                <a href="https://www.facebook.com/Tonsonfurry" class="social-item nav-link">Facebook</a>
                <a href="https://github.com/adison02254-creator" class="social-item nav-link">GitHub</a>
                <a href="https://discord.com/channels/@furry_ton" class="social-item nav-link">Discord</a>
                <a href="mailto:contact@tonsys.com" class="social-item nav-link" style="background: var(--primary-gold); color: #000;">Email Me</a>
            </div>
            
            <p style="margin-top: 40px; font-size: 0.9rem; opacity: 0.6;">พร้อมตอบกลับภายใน 24 ชั่วโมง :3</p>
        </div>
    </section>

    <footer>
        &copy; 2026 Tonsys Technologies - Built with Passion
    </footer>

    <script is:inline src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script is:inline src="https://unpkg.com/typed.js@2.0.16/dist/typed.umd.js"></script>

    <script>
        // 1. Cursor Logic
        const cursor = document.getElementById('cursor');
        document.addEventListener('mousemove', e => {
            cursor.style.left = e.clientX + 'px';
            cursor.style.top = e.clientY + 'px';
        });

        document.querySelectorAll('.nav-link').forEach(l => {
            l.addEventListener('mouseenter', () => cursor.style.transform = 'scale(2.5)');
            l.addEventListener('mouseleave', () => cursor.style.transform = 'scale(1)');
        });

        // 2. Continuous Particles (แก้ให้วงกลมออกมาเรื่อยๆ และเยอะขึ้น)
        (window as any).particlesJS('particles-js', {
            "particles": {
                "number": { "value": 100, "density": { "enable": true, "value_area": 800 } },
                "color": { "value": "#ffffff" },
                "shape": { "type": "circle" },
                "opacity": { "value": 0.3, "random": true },
                "size": { "value": 4, "random": true },
                "line_linked": { "enable": true, "distance": 150, "color": "#ffffff", "opacity": 0.1, "width": 1 },
                "move": { 
                    "enable": true, 
                    "speed": 3, 
                    "direction": "none", 
                    "random": true, 
                    "straight": false, 
                    "out_mode": "out", 
                    "bounce": false 
                }
            },
            "interactivity": {
                "detect_on": "canvas",
                "events": {
                    "onhover": { "enable": true, "mode": "grab" },
                    "onclick": { "enable": true, "mode": "push" }, // คลิกแล้ววงกลมจะพ่นออกมาเพิ่ม
                    "resize": true
                },
                "modes": {
                    "grab": { "distance": 200, "line_linked": { "opacity": 0.5 } },
                    "push": { "particles_nb": 4 }
                }
            },
            "retina_detect": true
        });

        // 3. Typed JS
        new (window as any).Typed('.typed-text', {
            strings: ['Tonsys Technologies', 'The Creator', 'Problem Solver'],
            typeSpeed: 60, backSpeed: 40, loop: true
        });

        // 4. Accordion Logic
        document.querySelectorAll('.project-item').forEach(item => {
            item.querySelector('.project-header').addEventListener('click', () => {
                const content = item.querySelector('.project-content') as HTMLElement;
                const isOpen = item.classList.contains('active');
                
                document.querySelectorAll('.project-item').forEach(i => {
                    i.classList.remove('active');
                    (i.querySelector('.project-content') as HTMLElement).style.maxHeight = '0';
                });

                if (!isOpen) {
                    item.classList.add('active');
                    content.style.maxHeight = content.scrollHeight + "px";
                }
            });
        });

        // 5. Search Logic
        const searchInput = document.getElementById('searchInput') as HTMLInputElement;
        searchInput.addEventListener('input', () => {
            const query = searchInput.value.toLowerCase();
            document.querySelectorAll('.project-item').forEach(item => {
                const name = (item as HTMLElement).dataset.name.toLowerCase();
                (item as HTMLElement).style.display = name.includes(query) ? 'block' : 'none';
            });
        });
    </script>
</body>
</html>